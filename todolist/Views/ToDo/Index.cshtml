@model IEnumerable<todolist.Models.ToDoList>

@{
    ViewData["Title"] = "LUCKY CHILD TO LIST SYSTEM";
}


<div class=" text-right">
    <p>
        <a asp-action="Create" class="btn btn-primary">create here your new to do list</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.YourTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.YourTask)
            </td>
            <td>
                @if (item.IsDone == 1)
                {
                    <label class="label label-success">Done</label>
                }
                else { 
                    <label class="label label-danger">Pending</label>
                }
            </td>
            <td>
                <a asp-controller="ToDo" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                <a asp-controller="ToDo"  asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
